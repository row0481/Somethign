<%- include('partials/header'); %>
<!--page layout-->
<br><br>
<div class="row justify-content-md-center container-fluid">
  <div class="col-md-8 p-4 mb-3 bg-light rounded">
    <main role="sidebar" class="container">
        <div class="accountMain">
        <h1 class="pb-4 mb-4 border-bottom">
        Account
        </h3>
        <div class="main">
          <div class="container">
            <div class="d-flex">
              <div class="w-50 mr-3">
                <% if (locals.errors && locals.errors.profile) { %>
                  <% locals.errors.profile.forEach(function(error) { %>
                    <p class="alert alert-danger" role="alert"><%= error %></p>
                  <% }) %>
                <% } %>
                <%- include('partials/updateAccount'); %>
              </div>
              <div class="w-50 ml-3">
                <% if (locals.errors && locals.errors.password) { %>
                  <% locals.errors.password.forEach(function(error) { %>
                    <p class="alert alert-danger" role="alert"><%= error %></p>
                  <% }) %>
                <% } %>
                <%- include('partials/updatePassword'); %>
              </div>
            </div>
          </div>
      </div><!-- /.blog-main -->
      </div><!-- /.row -->
    </main><!-- /.container -->
  </div>
</div>

<%- include('partials/footer'); %>
