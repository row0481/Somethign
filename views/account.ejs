<%- include('partials/header'); %> 
<div id="main">
  <div class="container-fluid">
    <div class="row">
      <div id="sidebar" class="col-md-3">
        <h2>Thing</h2>
      </div>  
      <main role="main" class="col-md-9">
        <h1>Account</h1>
      </main>
    </div> <!-- end .row --> 
  </div><!-- end .container-fluid -->
</div><!-- end #main -->

<div class="col-2">
  <form action="/account" method="post" enctype="multipart/form-data">
    <div class="form-group">
      <label for="updateDisplayName">Display Name</label>
      <input type="text" class="form-control" name="displayName" placeholder="Display Name" value="<%= locals.user.displayName %>" id="updateDisplayName" aria-describedby="emailHelp">
    </div>
    <div class="form-group">
      <label for="updateInputEmail">Email</label>
      <input type="email" class="form-control" name="email" placeholder="Email" value="<%= locals.user.email %>" id="updateInputEmail">
    </div>
    <div class="form-group">
      <label for="updateAvatar">Update Avatar</label>
      <input type="file" name="avatar" value="<%= locals.user.avatar %>" id="updateAvatar">
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
  </form>
</div>

<div class="col-2">
  <form action="/password" method="post">
    <div class="form-group">
      <label for="updatePassword">Password</label>
      <input type="password" class="form-control" name="password" placeholder="Password" value="<%= locals.user.password %>" id="updatePassword" aria-describedby="emailHelp">
    </div>
    <div class="form-group">
      <label for="updateConfirmPassword">Confirm Password</label>
      <input type="password" class="form-control" name="passwordConfirm" placeholder="Confirm Password" value="<%= locals.user.passwordConfirm %>" id="updatePassword" aria-describedby="emailHelp">
    </div>
    <button type="submit" class="btn btn-primary">Update Password</button>
  </form>
</div>

<%- include('partials/footer'); %>