<%- include('partials/header'); %> 
<div id="main">
  <div class="container-fluid">
    <div class="row">
      <div id="sidebar" class="col-md-3">
        <h2>Thing</h2>
      </div>  
      <main role="main" class="col-md-9">
        <h1>Account</h1>
      </main>
    </div> <!-- end .row --> 
  </div><!-- end .container-fluid -->
</div><!-- end #main -->

<form action="/account" method="post" enctype="multipart/form-data">
  <input type="text" name="displayName" placeholder="Display Name" value="<%= locals.user.displayName %>">
  <input type="email" name="email" placeholder="Email" value="<%= locals.user.email %>">
  <input type="file" name="avatar" value="<%= locals.user.avatar %>">
	<button type="submit">Update</button>
</form>

<form action="/password" method="post">
	<input type="password" name="password" placeholder="Password" value="<%= locals.user.password %>">
	<input type="password" name="passwordConfirm" placeholder="Confirm Password" value="<%= locals.user.passwordConfirm %>">
	<button type="submit">Update Password</button>
</form>
<%- include('partials/footer'); %>